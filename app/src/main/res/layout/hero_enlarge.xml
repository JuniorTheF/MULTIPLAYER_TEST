<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hero_enlarge_pic"
        android:layout_gravity="top"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:src="@drawable/miledi"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:fontFamily="@font/wiguru"
        android:padding="5dp"
        android:textColor="@color/text"
        android:background="@drawable/text_background"
        android:textSize="30sp"
        android:text="Открытые припасы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hero_enlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="top"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/text_background_less_radius"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/closed_treasures"
            android:textSize="25sp"
            android:textColor="@color/text"
            android:fontFamily="@font/wiguru"
            android:text="Закрытых сокровищ: 33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/status"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="@color/text"
            android:fontFamily="@font/wiguru"
            android:text="Статус: Жива"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>